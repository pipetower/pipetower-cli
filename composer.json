{
    "name": "pipetower/pipetower-cli",
    "description": "The CLI for Pipetower",
    "keywords": ["pipetower", "automation", "cli"],
    "homepage": "https://pipetower.com",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel-zero/framework": "^10.2",
        "nunomaduro/termwind": "^1.15.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/pt"]
}
